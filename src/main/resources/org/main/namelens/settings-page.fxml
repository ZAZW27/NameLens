<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Settings Page" styleClass="page-title">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
    </Label>

    <CheckBox text="Enable notifications"/>
    <CheckBox text="Auto-save changes"/>
    <CheckBox text="Dark mode"/>

    <Label text="Language:" styleClass="page-content">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <ComboBox promptText="Select language" maxWidth="200.0">
        <items>
            <javafx.collections.FXCollections fx:factory="observableArrayList">
                <String fx:value="English"/>
                <String fx:value="Spanish"/>
                <String fx:value="French"/>
                <String fx:value="German"/>
            </javafx.collections.FXCollections>
        </items>
    </ComboBox>

    <Button text="Save Settings" styleClass="action-button"/>
</VBox>