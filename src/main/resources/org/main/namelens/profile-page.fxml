<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Profile Page" styleClass="page-title">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
    </Label>

    <Label text="Name:" styleClass="page-content">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField promptText="Enter your name" maxWidth="300.0"/>

    <Label text="Email:" styleClass="page-content">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField promptText="Enter your email" maxWidth="300.0"/>

    <Label text="Bio:" styleClass="page-content">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField promptText="Tell us about yourself" maxWidth="300.0"/>
</VBox>