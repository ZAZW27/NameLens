<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.main.namelens.MainController"
            stylesheets="@styles.css">

    <!-- Navigation Sidebar -->
    <left>
        <VBox spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <Button text="Home" onAction="#showHomePage"
                    styleClass="nav-button" maxWidth="Infinity"/>
            <Button text="Profile" onAction="#showProfilePage"
                    styleClass="nav-button" maxWidth="Infinity"/>
            <Button text="Settings" onAction="#showSettingsPage"
                    styleClass="nav-button" maxWidth="Infinity"/>
            <Button text="About" onAction="#showAboutPage"
                    styleClass="nav-button" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
        </StackPane>
    </center>

</BorderPane>